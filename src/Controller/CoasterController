<?php

namespace App\Controller;

use App\Entity\Coaster;
use App\Form\CoasterType;
use Doctrine\DBAL\Driver\SQLSrv\Connection;
use Doctrine\ORM\EntityManager;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Attribute\Route;

class CoasterController extends AbstractController
{
    #[Route(path: '/coaster')]
    public function index(CoasterRepository $coasterRepository): Response
    {
        $entities = $coasterRepository->findAll();
        return $this->render('coaster/index.html.twig', [
        'entities' => $entities, //envoie des entités dans la vue
        ]);
    }

    #[Route(path: '/coaster/add')]
    public function add(EntityManagerInterface $em, Request $request): Response
    {
        $coaster = new Coaster();
        $form = $this->createForm(CoasterType::class, $coaster);

        // Envoi des données $_POST dans le formulaire
        $form->handleRequest($request);

        if ($form->isSubmitted() && $form->isValid()) {
            $em->persist($coaster);
            $em->flush();

            // Redirection
        }

        return $this->render('/coaster/add.html.twig', [
            'coasterForm' => $form,
        ]);

        /*$coaster->setName('Space Mountains');
        $coaster->setLength(600);
        $coaster->setMaxHeight(45);
        $coaster->setMaxSpeed(70);
        $coaster->setOperating(true);

        // Indique à Doctrine de prendre en compte l'entité
        $em->persist($coaster);

        // Met à jour la DB
        $em->flush();

        return new Response('Coaster créé');*/
    }

    //{id</d+} est un paramêtre de type entier de 1 ou pls chiffres
    #[Route(path : '/coaster/{id}/edit')]
     public function edit(): Response
    {
        return $this->render('coaster/edit.html.twig', [
        ]);
    }
}